<div class="container">
  <div class="row">
    <div class="col-md-1">

    </div>
    <div class="col-md-10">

      <h1 class="text-center font-weight-bold pt-5">パスワード忘れた?</h1>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field pt-3">
        <%= f.label :email,'メールアドレス' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "col-md-12 form-control"%>
      </div>

      <div class="actions pt-3">
        <%= f.submit "新たなパスワードを作る",class: "btn btn-primary mb-4" %>
      </div>
      <% end %>

      <%= render "devise/shared/links"%>
    </div>
    <div class="col-md-1">

    </div>
  </div>
</div>
